@model IEnumerable<Category>

<h1>Categories</h1>
<table class="table table-hover table-bordered">
	<thead class="fw-bold">
	<tr>
		<td>Name</td>
		<td>Description</td>
		<td>Created Time</td>
		<td>Edit</td>
		<td>Delete</td>
	</tr>
	</thead>

	<tbody>
	@foreach (var category in Model)
	{
		<tr>
			<td>@category.Name</td>
			<td>@category.Description</td>
			<td>@category.CreatedTime</td>
			<td><a class="btn btn-warning" asp-action="Edit" asp-route-id="@category.Id">Edit</a></td>
			<td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a></td>
		</tr>
	}
	</tbody>
</table>

<a asp-action="Create" class="btn btn-primary">New</a>