@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 mt-5">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top-3">
                    <h3 class="mb-0 fw-bold">Welcome Back</h3>
                    <p class="mb-0 text-white-50">Please log in to your account</p>
                </div>
                <div class="card-body p-5">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com">
                            <label asp-for="Input.Email">Email address</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password">
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-secondary" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary rounded-pill fw-bold">Log In</button>
                        
                        <div class="text-center mt-4">
                            <p class="mb-2"><a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-muted">Forgot password?</a></p>
                            <p class="mb-2">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Register</a></p>
                            <p class="mb-0"><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none text-muted small">Resend email confirmation</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
