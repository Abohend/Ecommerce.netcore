@model ProductCategoriesVM

@{
    ViewBag.PageTitle = "Edit Product";
}

<div class="card my-4 mx-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">@ViewBag.PageTitle</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Product.Id" />
                <input type="hidden" asp-for="Product.Image" />
                <div class="form-group m-3">
                    <label asp-for="Product.Name" class="control-label"></label>
                    <input asp-for="Product.Name" class="form-control border px-3" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Product.Description" class="control-label"></label>
                    <input asp-for="Product.Description" class="form-control border px-3" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control border px-3" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Product.Image" class="control-label"></label>
                    <input id="product-image" onchange="PreviewImage(event)" accept="image/*" type="file" name="file" class="form-control border px-3" />
                </div>
                <div class="form-group m-3">
                    <label asp-for="Product.CategoryId" class="control-label"></label>
                    <select asp-for="Product.CategoryId" asp-items="Model.Categories" class="form-control border px-3">
                        <option selected disabled>Select Category</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group mx-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <img id="product-image-preview" src="~/@Model.Product.Image" class="img-fluid w-70" />
        </div>
    </div>
</div>

<a asp-action="Index" class="mx-4 btn btn-success">Back to list</a>


@section Scripts {
    @{
        await Html.RenderPartialAsync("../Shared/_ValidationScriptsPartial");

        <script>
            function PreviewImage(event) {
                    var imgHolder = document.getElementById('product-image-preview');
                    imgHolder.src = URL.createObjectURL(event.target.files[0]);
            }
        </script>
    }
}

