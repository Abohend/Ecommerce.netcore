@model IEnumerable<Ecommerce.Entities.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4 mt-2">
                    <div class="col-xl-3">
                        <div class="input-group w-100 mx-auto d-flex">
                            <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                            <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                        </div>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-xl-3">
                        <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                            <label for="fruits">Default Sorting:</label>
                            <select id="fruits" name="fruitlist" class="border-0 form-select-sm bg-light me-3" form="fruitform">
                                <option value="volvo">Nothing</option>
                                <option value="saab">Popularity</option>
                                <option value="opel">Organic</option>
                                <option value="audi">Fantastic</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-lg-12">
                        <div class="row g-4 justify-content-center">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-6 col-lg-6 col-xl-4">
                                    <div class="rounded position-relative fruite-item border border-secondary rounded-bottom" style="height: 450px;">
                                        <!-- Fixed card height -->
                                        <div class="fruite-img p-4" style="height: 250px; overflow: hidden; align-items: center; justify-content: center;">
                                            <!-- Fixed image container height and centered content -->
                                            <a asp-action="details" asp-route-id="@item.Id">
                                                <img src=~/@item.Image class="img-fluid w-100 h-100 object-fit-contain rounded-top" alt="@item.Name" style="object-fit: contain; object-position: center;">
                                            </a>
                                        </div>
                                        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@item.Category?.Name</div>
                                        <div class="p-4">
                                            <h4>@item.Name</h4>
                                            <p>@item.Description</p>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <p class="text-dark fs-5 fw-bold mb-0">$@item.Price</p>
                                                <form asp-controller="ShoppingCarts" asp-action="Increment" asp-route-productId="@item.Id" data-ajax="true" data-ajax-method="Post">
                                                    <button type="submit" onclick="OnCartAdd()" class="btn border border-secondary rounded-pill px-3 text-primary">
                                                        <i class="fa fa-shopping-bag me-2 text-primary"></i>
                                                        Add to cart
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="col-12">
                                <div class="pagination d-flex justify-content-center mt-5">
                                    <a href="#" class="rounded">&laquo;</a>
                                    <a href="#" class="active rounded">1</a>
                                    <a href="#" class="rounded">2</a>
                                    <a href="#" class="rounded">3</a>
                                    <a href="#" class="rounded">4</a>
                                    <a href="#" class="rounded">5</a>
                                    <a href="#" class="rounded">6</a>
                                    <a href="#" class="rounded">&raquo;</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function OnCartAdd() {
                Toastify({
                text: "Product added to cart successfully.",
                duration: 3000,
                gravity: "top", // `top` or `bottom`
                position: "right", // `left`, `center` or `right`
                style: {
                    background: "linear-gradient(to right, #ffb524, #81c408)",
                }
            }).showToast();
            var cartCount = parseInt($("#cartCount").text());
            $("#cartCount").text(cartCount + 1);
        };
    </script>
}