@model dynamic
@using Ecommerce.Entities.Models
@{
    ViewData["Title"] = "Contact";
    // If Model is ContactMessage (POST failure), use ViewBag.ContactInfo, else Model is ContactInfo or null
    ContactInfo? info = (Model is ContactInfo) ? Model : ViewBag.ContactInfo as ContactInfo;
    ContactMessage? messageModel = (Model is ContactMessage) ? Model : null;
}

<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Get in touch</h1>
                        <p class="mb-4">Contact us for any query.</p>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100"
                                style="height: 400px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15282225.79979123!2d73.7250245393691!3d20.750301298393563!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x30635ff06b92b791%3A0xd78c4fa1854213a6!2sIndia!5e0!3m2!1sen!2sin!4v1587818542745!5m2!1sen!2sin"
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <div class="col-lg-7">
                    <form asp-action="Contact" method="post" class="">
                        <input type="text" name="Name" class="w-100 form-control border-0 py-3 mb-4" placeholder="Your Name" value="@messageModel?.Name">
                        <span class="text-danger" >@Html.ValidationMessage("Name")</span>

                        <input type="email" name="Email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Enter Your Email" value="@messageModel?.Email">
                         <span class="text-danger" >@Html.ValidationMessage("Email")</span>

                        <input type="text" name="Subject" class="w-100 form-control border-0 py-3 mb-4" placeholder="Subject" value="@messageModel?.Subject">

                        <textarea name="Message" class="w-100 form-control border-0 mb-4" rows="5" cols="10" placeholder="Your Message">@messageModel?.Message</textarea>
                         <span class="text-danger" >@Html.ValidationMessage("Message")</span>

                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary " type="submit">Submit</button>
                    </form>
                </div>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Address</h4>
                            <p class="mb-2">@info?.Address</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Mail Us</h4>
                            <p class="mb-2">@info?.Email</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Telephone</h4>
                            <p class="mb-2">@info?.Phone</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
