@model Order
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Billing details</h1>
        <form asp-action="Checkout" asp-controller="ShoppingCarts" method="post" asp-antiforgery="true">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <div class="form-item w-100">
                                <label asp-for=UserName class="form-label my-3">Name<sup>*</sup></label>
                                <input required asp-for=UserName type="text" class="form-control">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-item">
                        <label asp-for=Address class="form-label my-3">Address<sup>*</sup></label>
                        <input required asp-for=Address type="text" class="form-control" placeholder="House Number Street Name">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label asp-for=City class="form-label my-3">Town/City<sup>*</sup></label>
                        <input required asp-for=City type="text" class="form-control">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label asp-for=Phone class="form-label my-3">Mobile<sup>*</sup></label>
                        <input required asp-for=Phone type="text" class="form-control">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-5">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Products</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ShoppingCartItems!)
                                {
                                    <tr>
                                        <th scope="row">
                                            <div class="d-flex align-items-center mt-2">
                                                <img src="~/@item.Product!.Image" class="img-fluid rounded-circle" style="width: 90px; height: 90px;" alt="">
                                            </div>
                                        </th>
                                        <td class="py-5">@item.Product.Name</td>
                                        <td class="py-5">$@item.Product.Price</td>
                                        <td class="py-5">@item.Amount</td>
                                        <td class="py-5">$@(item.Product.Price * @item.Amount)</td>
                                    </tr>
                                }
                                <tr>
                                    <th scope="row">
                                    </th>
                                    <td class="py-5">
                                        <p class="mb-0 text-dark text-uppercase py-3">TOTAL</p>
                                    </td>
                                    <td class="py-5"></td>
                                    <td class="py-5"></td>
                                    <td class="py-5">
                                        <div class="py-3 border-bottom border-top">
                                            <p class="mb-0 text-dark">$@Model.Total</p>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Place Order</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>